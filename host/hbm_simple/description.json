{
    "name": "HBM Simple", 
    "description": [
        "This is a simple example of vector addition to describe how to use HLS kernels with HBM (High Bandwidth Memory) for achieving high throughput."
    ],
    "keywords": [
        "HBM", 
        "XCL_MEM_TOPOLOGY", 
        "cl_mem_ext_ptr_t"
    ], 
    "key_concepts": [
        "High Bandwidth Memory", 
        "Multiple HBM Banks"
    ], 
    "default_device": "xilinx_u280_xdma_201920_1", 
    "ndevice": [        
        "xilinx_u200_xdma",
        "xilinx_u200_qdma",
        "zc",
        "xilinx_u250_xdma",
        "xilinx_u250_qdma",
        "samsung"
    ],
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ], 
    "host": {
        "host_exe": "host", 
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2"
            ]
        }
    }, 
    "containers": [
        {
            "accelerators": [
                {
                    "compute_units": [
                        {
                            "arguments": [
                                {
                                    "name": "in1", 
                                    "memory": "HBM[0:3]"
                                }, 
                                {
                                    "name": "in2", 
                                    "memory": "HBM[0:3]"
                                }, 
                                {
                                    "name": "out_r", 
                                    "memory": "HBM[0:3]"
                                }
                            ]
                        }
                    ], 
                    "name": "krnl_vadd", 
                    "location": "src/krnl_vadd.cpp"
                }
            ], 
            "name": "krnl_vadd"
        }
    ],
    "launch": [
        {
            "cmd_args": "BUILD/krnl_vadd.xclbin", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ] 
}
